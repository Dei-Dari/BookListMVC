@model BookListMVC.Models.Book
@*вспомогательные функции тэегов*@
@*https://learn.microsoft.com/en-us/aspnet/core/mvc/views/tag-helpers/intro?view=aspnetcore-7.0*@
@*обновление создание, в зависимости от выбора*@
<br />
<h2 class="text-info">@(Model.Id != 0 ? "Edit" : "Create") Book</h2>

<div class="border container" style="padding:30px;">
    @*метод нажатия на кнопку совпадает с названием, можно не указывать asp-action="Upsert"*@
    <form method="post">
        @if (Model.Id != 0)
        {
            //скрытое поле с id
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                @*проверки*@
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Author" class="form-control" />
                @*проверки*@
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="ISBN" class="form-control" />
                @*проверки*@
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @*обновление при ошибочном вводе*@
    <partial name="_ValidationScriptsPartial" />
}